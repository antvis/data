    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "outDir": "./lib",
    "declarationDir": "./temp",
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
  },
  "include": ["./src", "./scripts"]
}